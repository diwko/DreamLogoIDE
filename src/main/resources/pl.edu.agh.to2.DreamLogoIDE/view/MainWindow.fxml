<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.111"
            fx:controller="pl.edu.agh.to2.DreamLogoIDE.controller.MainWindowController" fx:id="mainWindow">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="New File" />
                <MenuItem mnemonicParsing="false" text="Open File" />
                <MenuItem mnemonicParsing="false" text="Save" />
                <MenuItem mnemonicParsing="false" text="Save As" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem mnemonicParsing="false" text="Undo" onAction="#undoCommand"/>
                <MenuItem mnemonicParsing="false" text="Redo" onAction="#redoCommand"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
    <right>
        <ListView fx:id="commandHistoryView" disable="true" prefHeight="680.0" prefWidth="480"
                  BorderPane.alignment="CENTER"/>
    </right>
   <bottom>
       <VBox alignment="BOTTOM_CENTER" prefHeight="40.0" prefWidth="800.0" BorderPane.alignment="CENTER">
           <children>
               <TextField fx:id="commandInputField" onAction="#executeCommand"/>
               <TextField fx:id="errorMessageField" disable="true"/>
           </children>
       </VBox>
   </bottom>
    <center>
        <Pane prefHeight="630.0" prefWidth="800.0" BorderPane.alignment="CENTER" style="-fx-background-color: white">
            <children>
                <Canvas fx:id="shapesCanvas" height="630.0" width="800.0"/>
                <Canvas fx:id="turtleCanvas" height="630.0" width="800.0"/>
            </children>
        </Pane>
    </center>

</BorderPane>
